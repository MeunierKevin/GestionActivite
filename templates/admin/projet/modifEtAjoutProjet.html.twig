{% extends "admin/base.html.twig" %}

{% block title %}Mon Actitivité - Mes Projets{% endblock %}

{% block titrePage %}
  {% if isModification %}
    Modification Du Projet n°{{projet.id}}
  {% else %}
    Nouveau Projet
  {% endif %}
{% endblock %}
{% block body %}
  {{form_start(form)}}
  <div class="container-fluid">
    <div class="row">
      <div class="col-6">
        {{form_row(form.analyseExistant)}}
        {{form_row(form.objectifsDuSite)}}
        {{form_row(form.cibles)}}
        {{form_row(form.fonctionnalites)}}
        {{form_row(form.charteGraphique)}}
        <div class="row">
          <div class="col-6">
            {{form_row(form.dateMaquette)}}
            {{form_row(form.dateDeveloppement)}}
          </div>
          <div class="col-6">
            {{form_row(form.dateTests)}}
            {{form_row(form.dateMiseEnLigne)}}
          </div>
        </div>

      </div>
      <div class="col-6">
        {{form_row(form.contenuDuSite)}}
        {{form_row(form.maquettage)}}
        {{form_row(form.contraintesTechniques)}}
        {{form_row(form.prestationsDevis)}}
        <div class="row">
          <div class="col-6">
            {{form_row(form.client)}}
          </div>
          <div class="col-6">
            {{form_row(form.typeProjet)}}
          </div>
          <div class="bg-secondary w-100 text-white text-center">
            <p class="h2">IMAGES DU PROJET</p>
          </div>

          {# <div class="mt-2">{{form_row(form.images.imageFile)}}</div> #}
        </div>
      </div>
    </div>
  </div>

  <input type="submit" class="btn btn-primary" value="Valider les modifications">
  {{form_end(form)}}
{% endblock %}
