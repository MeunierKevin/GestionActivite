{% extends "admin/base.html.twig" %}

{% block title %}Mon Actitivité - Mes Clients{% endblock %}

{% block titrePage %}
  {% if isModification %}
    Modification Du Client n°{{client.id}}
  {% else %}
    Nouveau Client
  {% endif %}
{% endblock %}
{% block body %}
  {{form_start(form)}}
  <div class="container-fluid">
    <div class="bg-info w-100 text-white text-center">
      <p class="h3">INFORMATIONS GENERALES</p>
    </div>
    <div class="row">
      <div class="col-6">
        {{form_row(form.nomEntreprise)}}
        {{form_row(form.prenomContact)}}
        {{form_row(form.nomContact)}}
        {{form_row(form.presentationEntreprise)}}
      </div>
      <div class="col-6">
        {{form_row(form.telephone)}}
        {{form_row(form.email)}}
        {{form_row(form.adresse)}}
        {{form_row(form.typeClient)}}
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <input type="submit" class="btn btn-primary font-weight-bold" value="Valider">
  </div>
  {{form_end(form)}}
{% endblock %}
