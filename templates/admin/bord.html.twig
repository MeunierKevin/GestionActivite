{% extends "admin/base.html.twig" %}

{% block body %}
  <div class="container-fluid bg-light statsBord pt-3">
    <div class="row">
      <div class="col-3">
        <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
          <div class="card-header">Projets 2021
            <i class="fas fa-folder-open"></i>
          </div>
          <div class="card-body row text-center">
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-up"></i>
            </div>
            <div class="col-4">
              <h4 class="card-title m-0">{{ stats.projets}}
              </h4>
            </div>
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-up"></i>
            </div>
          </div>
          <p class="card-text text-center">+2.8% vs N-1</p>
        </div>
      </div>
      <div class="col-3">
        <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
          <div class="card-header">Clients 2021
            <i class="fas fa-users"></i>
          </div>
          <div class="card-body row text-center">
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-down"></i>
            </div>
            <div class="col-4">
              <h4 class="card-title m-0">{{ stats.clients}}
              </h4>
            </div>
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-down"></i>
            </div>
          </div>
          <p class="card-text text-center">+2.8% vs N-1</p>
        </div>
      </div>

      <div class="col-3">
        <div class="card text-white bg-danger mb-3" style="max-width: 20rem;">
          <div class="card-header">Chiffre d'Affaire 2021
            <i class="fas fa-euro-sign"></i>
          </div>
          <div class="card-body row text-center">
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-up"></i>
            </div>
            <div class="col-4">
              <h4 class="card-title m-0">30
              </h4>
            </div>
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-up"></i>
            </div>
          </div>
          <p class="card-text text-center">+2.8% vs N-1</p>
        </div>
      </div>
      <div class="col-3">
        <div class="card text-white bg-warning mb-3" style="max-width: 20rem;">
          <div class="card-header">Devis 2021
            <i class="fas fa-chart-line"></i>
          </div>
          <div class="card-body row text-center">
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-down"></i>
            </div>
            <div class="col-4">
              <h4 class="card-title m-0">30
              </h4>
            </div>
            <div class="col-4">
              <i class="fas fa-arrow-alt-circle-down"></i>
            </div>
          </div>
          <p class="card-text text-center">+2.8% vs N-1</p>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row bg-white">
        <div class="col-6">
          <p>Suivi du chiffre d'affaire</p>
          <div>
            <canvas id="myChart"></canvas>
          </div>
        </div>
        <div class="col-6">
          <p>Suivi des objectifs</p>
          <div class="progress mt-5">
            <div class="progress-bar progress-bar-striped font-weight-bold" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">Nouveaux contrats 10%</div>
          </div>
          <div class="progress mt-4">
            <div class="progress-bar progress-bar-striped bg-success font-weight-bold" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">Fid√©lisation 25%</div>
          </div>
          <div class="progress mt-4">
            <div class="progress-bar progress-bar-striped bg-info font-weight-bold" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">Relance 50%</div>
          </div>
          <div class="progress mt-4">
            <div class="progress-bar progress-bar-striped bg-warning  font-weight-bold" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">Prospection clients 75%</div>
          </div>
          <div class="progress mt-4">
            <div class="progress-bar progress-bar-striped bg-danger  font-weight-bold" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Prospection partenaires 100%</div>
          </div>
        </div>
      </div>
    </div>
    <div class="container-fluid">
      <div class="row bg-white">
        <div class="col-6">
          <p>Origine des clients</p>
          <div class="d-flex justify-content-center">
            <div>
              <canvas id="myChart3" class="camembert"></canvas>
            </div>
          </div>

        </div>
        <div class="col-6">
          <p>Suivi de la prospection</p>
          <div class="d-flex justify-content-center text-center">
            <canvas id="myChart2"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="{{asset('js/bord.js')}}"></script>
{% endblock %}
